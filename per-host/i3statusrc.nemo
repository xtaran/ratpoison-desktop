general {
	output_format = "xmobar"
	colors = true
	interval = 1
}

wireless ath0 {
	# if you use %speed, i3status requires root privileges or netcap
	format_up = "%essid: %ip %quality %bitrate"
	format_down = "W"
}

wireless wlan0 {
	# if you use %speed, i3status requires root privileges or netcap
	format_up = "%essid: %ip %quality %bitrate"
	format_down = "W"
}

ethernet eth0 {
	# if you use %speed, i3status requires root privileges or netcap
	format_up = "E: %ip %speed"
	format_down = "E"
}

battery 0 {
	format = "%status %percentage"
	last_full_capacity = yes
}

load {
	format = "%1min %5min %15min"
}

cpu_temperature 0 {
	format = "%degreesÂ°C"
}

disk "/" {
	format = "/ %avail"
}

order  = ""
order += ${WLAN_IF}
order += "ethernet eth0"
order += "battery 0"
order += "cpu_temperature 0"
order += "load"
order += "disk /"
